[Configuration]
default_base = /home/dbadmin
install_opts = -Y -T -s {{vertica_ips}} -r /tmp/vertica_7.0.0-1_amd64.deb -d /var/vertica/data
show_hostnames = False
format = 3
last_port = 5433

[Cluster]
hosts = {{vertica_ips}}
spread_hosts = 

[Nodes]
{% for url in vertica_ips.split(',') %}
node000{{loop.index0}}={{url}},{{vertica_catalog_dir}},{{vertica_data_dir}}
{% endfor %}
